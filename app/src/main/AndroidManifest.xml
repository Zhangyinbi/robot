<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.domain.operationrobot">


    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.CAMERA" />


    <!--MiPush 权限列表-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />​
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <permission
        android:name="com.domain.operationrobot.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature" /> <!--这里com.xiaomi.mipushdemo改成app的包名-->
    <uses-permission android:name="com.domain.operationrobot.permission.MIPUSH_RECEIVE" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity android:name=".app.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        //创建用户
        <activity android:name=".app.password.AccountActivity" />
        //用户协议
        <activity android:name=".app.UserServiceProtocolActivity" />
        //注册成功
        <activity android:name=".app.company.RegisterSussActivity" />
        //加入公司
        <activity android:name=".app.company.JoinCompanyActivity" />
        //忘记密码
        <activity android:name=".app.password.ForgetPwdActivity" />
        //修改密码
        <activity android:name=".app.password.ModifyPwdActivity" />
        //修改手机号
        <activity android:name=".app.password.ModifyPhoneActivity" />
        //修改用户姓名
        <activity android:name=".app.password.ModifyUserNameActivity" />
        //验证密码
        <activity android:name=".app.password.VerifyPwdActivity" />
        //加入公司
        <activity android:name=".app.company.ApplyActivity" />
        //完善企业资料
        <activity android:name=".app.company.CreateCompanyActivity" />
        //编辑运维用户和添加运维用户
        <activity android:name=".app.operation.OperationActivity" />
        //用户个人资料
        <activity android:name=".app.setting.UserInfoActivity"></activity>
        //用户申请页面
        <activity android:name=".app.company.UserApplyActivity" />
        //首页
        <activity
            android:name=".app.home.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        //运维用户管理
        <activity android:name=".app.operation.OperationManagerActivity"></activity>

        <!-- <meta-data android:name="com.domain.library.MyAppGlideModule" -->
        <!-- android:value="GlideModule"/> -->
        //服务器列表监控页面
        <activity android:name=".app.home.server.ServerMonitorActivity"></activity>
        <activity android:name=".app.order.SelectTimeActivity"></activity>




        <!--MiPush service和receiver-->
        <service android:enabled="true" android:process=":pushservice" android:name="com.xiaomi.push.service.XMPushService"/>

        <service android:name="com.xiaomi.push.service.XMJobService" android:enabled="true" android:exported="false" android:permission="android.permission.BIND_JOB_SERVICE" android:process=":pushservice" /> <!--注：此service必须在3.0.1版本以后（包括3.0.1版本）加入-->

        <service android:enabled="true" android:exported="true" android:name="com.xiaomi.mipush.sdk.PushMessageHandler" />

        <service android:enabled="true" android:name="com.xiaomi.mipush.sdk.MessageHandleService" /> <!--注：此service必须在2.2.5版本以后（包括2.2.5版本）加入--> <receiver android:exported="true" android:name="com.xiaomi.push.service.receivers.NetworkStatusReceiver" >

        <intent-filter>

            <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />

            <category android:name="android.intent.category.DEFAULT" />

        </intent-filter>

    </receiver>

        <receiver android:exported="false" android:process=":pushservice" android:name="com.xiaomi.push.service.receivers.PingReceiver" >

            <intent-filter>

                <action android:name="com.xiaomi.push.PING_TIMER" />

            </intent-filter>

        </receiver>


        <receiver
            android:exported="true"
            android:name="com.domain.operationrobot.mipush.MiMessageReceiver">
            <!--这里com.xiaomi.mipushdemo.DemoMessageRreceiver改成app中定义的完整类名-->
            <intent-filter>
                <action android:name="com.xiaomi.mipush.RECEIVE_MESSAGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.xiaomi.mipush.MESSAGE_ARRIVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.xiaomi.mipush.ERROR" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
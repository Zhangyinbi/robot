<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_30"
    android:orientation="vertical"
    >
  <include layout="@layout/time_item"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/iv_user_img"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginLeft="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bieren"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_13"
          android:text="Darry"
          android:textColor="#747474"
          android:textSize="@dimen/dimens_12sp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_6"
          android:layout_marginRight="@dimen/dimens_6"
          android:layout_marginTop="@dimen/dimens_4"
          android:gravity="end"
          android:layout_weight="1"
          >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_from_bg_normal"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/dimens_12"
            android:text="恢复健康是你父母说你麻烦恢复健康是你父母说你麻烦恢复健康是你父母说你麻烦恢复健康是你父母说你麻烦恢复健康是你父母说你麻烦"
            android:textColor="#020202"
            android:textSize="@dimen/dimens_16sp"
            />
        <ImageView
            android:id="@+id/iv_image_msg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dimens_6"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            android:src="@mipmap/data_empty"
            android:visibility="gone"
            />
      </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimens_13"
        android:text="Darry"
        android:textColor="#747474"
        android:textSize="@dimen/dimens_12sp"
        android:visibility="invisible"
        />
  </LinearLayout>
</LinearLayout>
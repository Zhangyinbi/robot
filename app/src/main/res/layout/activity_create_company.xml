<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.company.CreateCompanyActivity">
    <com.domain.operationrobot.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="完善企业资料"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimens_18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="公司名称"
                android:textColor="#666"
                android:textSize="@dimen/dimens_15sp" />

            <com.domain.library.widgets.DeleteEdit
                android:id="@+id/de_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:paddingHorizontal="@dimen/dimens_15"
                app:toast_hint="请输入公司名称"
                app:value_hint="请输入公司名称（必填）" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮箱账号"
                android:textColor="#666"
                android:textSize="@dimen/dimens_15sp" />

            <com.domain.library.widgets.DeleteEdit
                android:id="@+id/de_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:paddingHorizontal="@dimen/dimens_15"
                app:toast_hint="请输入邮箱账号"
                app:value_hint="请输入邮箱账号（必填）" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="姓名姓名"
                android:textColor="#666"
                android:textSize="@dimen/dimens_15sp" />

            <com.domain.library.widgets.DeleteEdit
                android:id="@+id/de_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:paddingHorizontal="@dimen/dimens_15"
                app:toast_hint="请输入你的姓名"
                app:value_hint="请输入你的姓名（必填）" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_17"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_blue_round_click_bg"
        android:paddingBottom="@dimen/dimens_17"
        android:paddingTop="@dimen/dimens_15"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_18" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_15"
    android:layout_marginLeft="@dimen/dimens_5"
    android:layout_marginRight="@dimen/dimens_5"
    android:background="@drawable/bg_white_round"
    >
  <ImageView
      android:id="@+id/iv_user_status"
      android:layout_width="46dp"
      android:layout_height="@dimen/dimens_53"
      android:src="@drawable/ywyhgl_bq"
      android:visibility="gone"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/iv_edit_operation"
        android:layout_width="33dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:paddingLeft="@dimen/dimens_5"
        android:paddingRight="@dimen/dimens_11"
        android:paddingTop="@dimen/dimens_11"
        android:src="@drawable/ywyhglicon_bj"
        />

    <com.domain.operationrobot.glide.CircleImageView
        android:id="@+id/iv_admin_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/round_88"
        />
    <TextView
        android:id="@+id/tv_admin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_11"
        android:ellipsize="middle"
        android:maxWidth="102dp"
        android:singleLine="true"
        android:text="张信哲"
        android:textColor="#333"
        android:textSize="@dimen/dimens_18"
        />
    <LinearLayout
        android:id="@+id/ll_admin_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_13"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/iv_gly"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/dimens_5"
          android:src="@drawable/ywyhgl_gly"
          android:visibility="gone"
          />
      <ImageView
          android:id="@+id/iv_shy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ywyhgl_shy"
          android:visibility="gone"
          />
      <ImageView
          android:id="@+id/iv_yw"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ywyhgl_yw"
          android:visibility="gone"
          />
    </LinearLayout>
    <Button
        android:id="@+id/btn_manger"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_28"
        android:layout_marginBottom="@dimen/dimens_24"
        android:layout_marginLeft="@dimen/dimens_25"
        android:layout_marginRight="@dimen/dimens_25"
        android:layout_marginTop="@dimen/dimens_19"
        android:background="@drawable/blue_round_stroke"
        android:text="权限管理"
        android:textColor="@color/code_blue"
        android:textSize="@dimen/dimens_14"
        />
  </LinearLayout>
</RelativeLayout>
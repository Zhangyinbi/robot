<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimens_4"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ellipsize="end"
          android:id="@+id/tv_title"
          android:singleLine="true"
          android:text="/dev/sda3"
          android:textColor="#898989"
          android:textSize="@dimen/dimens_12sp"

          />
      <TextView
          android:id="@+id/tv_size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="30G/40G"
          android:textColor="#898989"
          android:textSize="@dimen/dimens_12sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_11"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="265"
        >
      <ProgressBar
          android:id="@+id/progress_bar"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dimens_13"
          android:layout_weight="183"
          android:progress="35"
          android:progressDrawable="@drawable/green"
          style="@android:style/Widget.Holo.ProgressBar.Horizontal"
          />

      <TextView
          android:id="@+id/tv_ratio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="82"
          android:gravity="end"
          android:text="35%"
          android:textColor="#666"
          android:textSize="13sp"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
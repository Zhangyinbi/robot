<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-25dp"
    android:background="#ededed"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".app.home.MainActivity"
    >

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rlv_recycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_above="@+id/ll"
      android:layout_weight="1"
      />


  <LinearLayout
      android:id="@+id/ll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="@dimen/dimens_17"
      android:layout_marginRight="@dimen/dimens_17"
      android:background="@drawable/bg_white_round"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:paddingBottom="@dimen/dimens_6"
        android:paddingTop="@dimen/dimens_6"
        android:textColor="@color/text_333"
        android:textSize="@dimen/dimens_14sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_3"
        >
      <TextView
          android:id="@+id/btn_send"
          android:layout_width="wrap_content"
          android:layout_height="28dp"
          android:layout_gravity="bottom"
          android:background="@drawable/login_blue_round_click_bg"
          android:gravity="center"
          android:paddingLeft="@dimen/dimens_13"
          android:paddingRight="@dimen/dimens_13"
          android:text="发送"
          android:textColor="#FFF"
          android:visibility="invisible"
          />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dimens_12"
      android:layout_marginTop="@dimen/dimens_14"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/iv_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_17"
        android:src="@drawable/icon_aite"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20"
        android:src="@drawable/icon_fuhao"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20"
        android:src="@drawable/icon_tupian"
        />
  </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_30"
    android:orientation="vertical"
    >

  <include layout="@layout/time_item"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/iv_user_img"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginLeft="17dp"
        android:src="@drawable/img_bieren"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_13"
          android:text="Darry"
          android:textColor="#747474"
          android:textSize="@dimen/dimens_12sp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_6"
          android:layout_marginTop="@dimen/dimens_4"
          android:background="@drawable/chat_from_bg_normal"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/dimens_12"
            android:textColor="#020202"
            android:textSize="@dimen/dimens_16sp"
            tools:text="那四大的空间啊好的接口和"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_15"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginTop="3dp"
            tools:text="已同意执行命令"
            android:textColor="#898989"
            android:textSize="12sp"
            />
        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            android:layout_marginTop="@dimen/dimens_16"
            android:visibility="gone"
            >
          <ImageView
              android:id="@+id/iv_jujue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dimens_20"
              android:src="@drawable/btn_jujue"
              />
          <ImageView
              android:id="@+id/iv_tongyi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dimens_23"
              android:src="@drawable/btn_tongyi"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimens_13"
        android:text="Darry"
        android:textColor="#747474"
        android:textSize="@dimen/dimens_12sp"
        android:visibility="invisible"
        />
  </LinearLayout>
</LinearLayout>
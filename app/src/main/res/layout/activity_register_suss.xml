<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEEF2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".app.company.RegisterSussActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/code_blue"
        android:paddingTop="@dimen/dimens_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/dimens_10"
            android:text="注册成功"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dimens_17"
            android:src="@drawable/back_icon_white" />


    </RelativeLayout>

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="@dimen/dimens_53"
        android:src="@drawable/zccg_img_cg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_22"
        android:text="注册成功"
        android:textColor="#666"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_12"
        android:text="现在你可以加入或者创建公司"
        android:textColor="#C6C6C6"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_join_company"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/blue_press"
        android:text="加入公司"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16sp" />

    <Button
        android:id="@+id/btn_create_company"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/blue_border_press"
        android:text="创建公司"
        android:textColor="@color/code_blue"
        android:textSize="@dimen/dimens_16sp" />

    <Button
        android:id="@+id/btn_look_around"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dimens_29"
        android:background="@drawable/blue_border_press"
        android:text="随便逛逛"
        android:textColor="@color/code_blue"
        android:textSize="@dimen/dimens_16sp" />
</LinearLayout>
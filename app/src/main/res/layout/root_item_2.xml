<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_30"
    android:orientation="vertical"
    >

  <include layout="@layout/time_item"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_width="@dimen/dimens_40"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginLeft="17dp"
        android:src="@drawable/img_bieren"
        android:id="@+id/iv_user_img"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_13"
          android:text="Darry"
          android:textColor="#747474"
          android:textSize="@dimen/dimens_12sp"
          android:id="@+id/tv_name"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimens_6"
          android:layout_marginTop="@dimen/dimens_4"
          android:background="@drawable/chat_from_bg_normal"
          android:orientation="vertical"
          >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/dimens_12"
            android:textColor="#020202"
            android:textSize="@dimen/dimens_16sp"
            android:id="@+id/tv_content"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:layout_marginTop="@dimen/dimens_2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/rlv_recycler"
            />
      </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimens_13"
        android:text="Darry"
        android:textColor="#747474"
        android:visibility="invisible"
        android:textSize="@dimen/dimens_12sp"
        />
  </LinearLayout>
</LinearLayout>
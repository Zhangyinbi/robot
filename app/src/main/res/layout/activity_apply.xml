<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".app.company.ApplyActivity"
    >
  <com.domain.operationrobot.widgets.TitleBar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:title="加入公司"
      />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="44dp"
      android:src="@drawable/img_jrgs"
      />

  <Button
      android:id="@+id/btn_join_company"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/dimens_17"
      android:layout_marginTop="56dp"
      android:background="@drawable/login_blue_round_click_bg"
      android:paddingBottom="@dimen/dimens_17"
      android:paddingTop="@dimen/dimens_15"
      android:text="加入公司"
      android:textColor="@color/white"
      android:textSize="@dimen/dimens_18"
      />

  <Button
      android:id="@+id/btn_create_company"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/dimens_17"
      android:layout_marginTop="19dp"
      android:background="@drawable/blue_shape_gray"
      android:paddingBottom="@dimen/dimens_17"
      android:paddingTop="@dimen/dimens_15"
      android:text="创建公司"
      android:textColor="@color/code_blue"
      android:textSize="@dimen/dimens_18"
      />
</LinearLayout>
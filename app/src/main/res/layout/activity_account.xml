<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimens_17">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingBottom="@dimen/dimens_7"
        android:paddingRight="@dimen/dimens_15"
        android:paddingTop="@dimen/dimens_8"
        android:src="@drawable/back_icon_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="创建账号"
        android:textColor="@color/code_blue"
        android:textSize="30sp" />

    <include
        layout="@layout/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_top_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_17"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimens_18"
            android:layout_height="@dimen/dimens_18"
            android:src="@drawable/icon_no_choose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_6"
            android:text="我已阅读并同意"
            android:textColor="#C6C6C6"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_user_service_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textColor="#4F88E7"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_3"
        android:layout_marginTop="@dimen/dimens_53"
        android:background="@drawable/login_blue_round_not_click_bg"
        android:paddingBottom="@dimen/dimens_17"
        android:paddingTop="@dimen/dimens_15"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_18" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
  <TextView
      android:id="@+id/tv_host_name"
      android:layout_width="match_parent"
      android:layout_height="82dp"
      android:layout_marginBottom="@dimen/dimens_10"
      android:layout_marginLeft="@dimen/dimens_7"
      android:layout_marginRight="@dimen/dimens_7"
      android:layout_marginTop="@dimen/dimens_10"
      android:background="@drawable/bg_in_box"
      android:gravity="center_vertical"
      android:maxLines="2"
      android:ellipsize="end"
      android:paddingLeft="@dimen/dimens_12"
      android:text="温江机房大数据中心服务器003"
      android:textColor="#00A181"
      android:textSize="16sp"
      />
  <ImageView
android:id="@+id/iv_close"
      android:layout_width="@dimen/dimens_16"
      android:layout_height="16dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/dimens_1"
      android:layout_marginTop="@dimen/dimens_2"
      android:src="@drawable/icon_guanbi2"
      />

</RelativeLayout>